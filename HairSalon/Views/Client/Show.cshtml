@using HairSalon.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>List of Stylists</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body class="container">
    <h1 class="jumbotron">Details on @Model.Clients[0].Name</h1>
    <ul>
      <li>Their Name: @Model.Clients[0].Name</li>
      <li>Their Stylist: @Model.SelectedStylist.Name</li>
    </ul>

    <a href='/'>Go Home</a><br>
    <form action='/Client/@Model/delete' method="post">
      <button type='submit'>Delete Item</button>
    </form>

    </html>

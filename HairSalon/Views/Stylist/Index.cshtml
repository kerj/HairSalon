@using HairSalon.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>List of Stylists</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body class="container">
    <h1>Pick a Kaiju Stylist to see their clients</h1>

    <ul>
    @if (Model.Count == 0)
    {
      <p>There are no stylists in your list yet :(!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Stylist stylist in Model)
      {

        <li><a href='/Stylist/@stylist.Id/client'>@stylist.Name</a></li>
        <p>@stylist.Bio</p>
        <br>
      }
    }
    </ul>

    </html>
  </body>
